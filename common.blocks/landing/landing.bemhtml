block landing {

    js: true,
    content: {

        var content = [
            {
                id: 'welcome',
                title: 'LinguaLeo. Покори язык.',
                body: 'LinguaLeo – это интересный и эффективный способ изучить Английский язык. Уже более 12 миллионов человек с нами – присоединяйся и ты!'
            },
            {
                id: 'pass-test',
                title: 'Пройди тест на знание языка',
                body: 'LinguaLeo определит, что ты уже знаешь и что предстоит изучить'
            },
            {
                id: 'get-plan',
                title: 'Получи персональную программу обучения',
                body: 'Ты получишь индивидуальные рекомендации по обучению, в зависимости от твоих навыков, целей и интересов'
            },
            {
                id: 'learn-materials',
                title: 'Изучай английский, делая то, что тебе нравится',
                body: 'Ты можешь выбрать фильмы, книги, сериалы и музыку из богатой коллекции материалов, подготовленной профессионалами и другими пользователями'
            },
            {
                id: 'exercises',
                title: 'Выполняй упражнения для практики языка',
                body: 'Множество интерактивных тренировок помогут тебе практиковать теоретические знания и учить новые слова'
            },
            {
                id: 'mobile',
                title: 'Изучай язык дома и в пути, на любых устройствах',
                body: 'LinguaLeo работает в Интернете, на смартфонах и планшетах. Все изучаемые слова и материалы будут всегда с тобой'
            }
        ];

        return content.map(function(item, i) {
            return [
                {
                    elem: 'wrapper',
                    attrs: { id: item.id },
                    content: [
                        {
                            elem: 'title',
                            content: (i ? i + '. ' : '') + item.title
                        },
                        {
                            elem: 'body',
                            content: item.body
                        }
                    ]
                }
            ];
        });

    }

}
