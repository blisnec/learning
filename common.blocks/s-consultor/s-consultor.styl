$root = '.s-consultor';

{$root}
  width 100%
  height 100%
  position relative
  left 0
  cursor default
  display flex
  justify-content center
  flex-flow row wrap
  margin-top 50px

  &__modal .modal__content
    text-align center
    min-width 400px
    min-height 190px

    & .spin
      top 70px

  &__add-question
    padding 50px 30px 0 30px

    & {$root}__textarea
      width: 100%

  &__send-question.button
    margin:  30px
