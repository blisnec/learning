block user, elem info, default: {

    var name = this.ctx.first_name || this.ctx.last_name,
        content = {
            block: 'link',
            mix: [{ block: 'user', elem: 'info' }],
            mods: { pseudo: true },
            title: name,
            content: [
                {
                    block: 'image',
                    mix: [
                        { block: 'user', elem: 'ava' }
                    ],
                    alt: name,
                    url: this.ctx.photo_100
                },
                {
                    block: 'user',
                    elem: 'nickname',
                    content: name
                },
                {
                    block: 'user-menu'
                }
            ]
        };

    applyCtx(content);

}
