.s-brain
  width 100%
  height 100%
  position relative
  left 0
  cursor default

  &__title
    font-size 36px
    color #f8a10b
    margin 0 auto
    text-align center

  &__title:first-letter
    text-transform uppercase

  &__question
    padding 10px
    font-size 22px

  &__answer
    cursor pointer
    padding 5px 0 5px 25px
    margin 15px 0
    font-size 18px

  &__answer:last-child
    margin-bottom 0

  &__answer:first-letter
    text-transform uppercase

  &__answer:hover
    color #EE732F

  & &__answer_freeze_yes
  & &__answer_freeze_yes:hover
    color #FFF
    cursor default

  & &__answer&__answer_selected_yes
    color #EE732F
    text-decoration underline

  & &__answer&__answer_is_right
  & &__answer&__answer_is_false
    text-decoration none

  & &__answer&__answer_is_right
    color #00C00C

  & &__answer&__answer_is_false
    color #F00

  & .spin
    margin 0 auto
    text-align center
    display block
    background-color transparent

  & .blackboard
    top 137px

  & .class-select
    top 60px
    position relative
    text-align center

  &__next-question.button
    top 98px
    position relative
    margin auto
    width 190px
    display block
