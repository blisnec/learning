.s-brain
  width 100%
  height 100%
  position relative
  left 0
  cursor default

  &__title
    font-size 36px
    color #f8a10b
    margin 0 auto
    text-align center

  &__title:first-letter
    text-transform uppercase

  &__question
    padding 10px

  &__answer
    cursor pointer
    padding 10px 0 0 25px

  &__answer:first-letter
    text-transform uppercase

  &__answer:hover
    color #EE732F

  & &__answer_freeze_yes
  & &__answer_freeze_yes:hover
    color #fff
    cursor default

  & &__answer&__answer_selected_yes
    color #EE732F
    text-decoration underline

  & &__answer&__answer_is_right
    color rgb(0, 192, 12)

  & &__answer&__answer_is_false
    color rgb(204, 0, 0)

  & .spin
    margin 0 auto
    text-align center
    display block
    background-color transparent

  & .blackboard
    top 150px

  & .class-select
    top 60px
    position relative
    text-align center
